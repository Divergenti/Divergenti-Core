{
    "appId": "cl.divergenti-core",
    "artifactName": "Divergenti-Core-${version}-${os}-${arch}.${ext}",
    "productName": "Divergenti Core",
    "asar": true,
    "publish": [
        {
            "provider": "github",
            "owner": "FluidChains",
            "repo": "Divergenti-Core"
        }
    ],
    "releaseInfo": {
        "releaseName": "${version}"
    },
    "files": [
        "dist/**",
        "main.js"
    ],
    "directories": {
        "output": "build"
    },
    "win": {
        "icon": "dist/assets/icon.ico",
        "target": [
            "nsis"
        ],
        "artifactName": "Divergenti.Core-${version}-${os}-${env.arch}.${ext}"
    },
    "linux": {
        "icon": "dist/assets/images",
        "target": [
            "AppImage:x64"
        ],
        "synopsis": " ",
        "category": "Utility"
    },
    "mac": {
        "icon": "dist/assets/icon.icns",
        "target": [
            "dmg",
            "zip"
        ],
        "category": "public.app-category.productivity"
    },
    "dmg": {
        "contents": [
            {
                "x": 110,
                "y": 150
            },
            {
                "x": 240,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true,
        "guid": "9a5fa62c-911a-4339-9ce1-8ad176a15fd5",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "license": "dist/assets/license.txt"
    },
    "msi": {
        "warningsAsErrors": false
    },
    "extraResources": [
        "daemon/**/*",
        "dist/assets/diver/icon-tray.ico",
        "dist/assets/diver/logo-icon.png",
        "dist/assets/diver/**",
        "dist/assets/license.txt"
    ]
}
