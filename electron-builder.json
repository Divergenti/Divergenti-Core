{
    "appId": "org.rutanio-core",
    "artifactName": "Rutanio.Core-${version}-${os}-${arch}.${ext}",
    "productName": "Rutanio Core",
    "asar": true,
    "publish": [
        {
            "provider": "github",
            "owner": "FluidChains",
            "repo": "Rutanio-Core"
        }
    ],
    "releaseInfo": {
        "releaseName": "v${version}"
    },
    "files": [
        "dist/**",
        "main.js"
    ],
    "directories": {
        "output": "build"
    },
    "win": {
        "icon": "dist/assets/icon.ico",
        "target": [
            "nsis"
        ],
        "artifactName": "Rutanio.Core-${version}-${os}-${env.arch}.${ext}"
    },
    "linux": {
        "icon": "dist/assets/images/",
        "target": [
            "AppImage:x64"
        ],
        "synopsis": " ",
        "category": "Utility"
    },
    "mac": {
        "icon": "dist/assets/icon.icns",
        "target": [
            "dmg",
            "zip"
        ],
        "category": "public.app-category.productivity"
    },
    "dmg": {
        "contents": [
            {
                "x": 110,
                "y": 150
            },
            {
                "x": 240,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true,
        "guid": "693636e4-aa8c-4a2f-87cc-acb76f324caf",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "license": "dist/assets/license.txt"
    },
    "msi": {
        "warningsAsErrors": false
    },
    "extraResources": [
        "daemon/**/*",
        "dist/assets/ruta/icon-tray.ico",
        "dist/assets/license.txt"
    ]
}
